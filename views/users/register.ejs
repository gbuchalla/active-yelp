<% layout('/layouts/boilerplate') -%>
<% block('head').append('<title>Register an account Â· ActiveYelp</title>') %> 

<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 align-self-center">
        <div class="card">
            <img src="https://images.unsplash.com/photo-1571902943202-507ec2618e8f?ixlib=rb-4.0.3&ixid=MnwxMjA3
                fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=775&q=80" class="card-img-top" alt="gym image">
            <div class="card-body">
                <h5 class="card-title">Register</h5>
                <form action="/register" method="POST" class="needs-validation" novalidate>
                    <div class="col-12 mb-3 card-text">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose an username.
                        </div>
                    </div>
                    <div class="col-12 mb-3 card-text">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please choose a password
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success rounded-1">Sign me up</button>
                        <a href="/login" class="btn btn-secondary rounded-1">Already signed up? Login here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/formValidation.js"></script>